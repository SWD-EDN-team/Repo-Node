<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Cards</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    />
    <!-- PayPal SDK -->
    <script
      src="https://www.paypal.com/sdk/js?client-id=AW-uE_V4cGv7b4hpTSXn2xaMeHUo7kEk4DlHtw7fBtIT0D-C83ZoIXNTakaQomWMfCpiCZ62DuhzuDPq&currency=USD"
    ></script>

    <style>
      .card-item { display: flex; align-items: center; justify-content:
      space-between; padding: 15px; border-bottom: 1px solid #eee; } .card-item
      img { width: 40px; height: auto; margin-right: 10px; } .btn-delete {
      background: #fdecec; color: #dc3545; border: none; }
    </style>
  </head>
  <body>
    <div class="container mt-4">
      <button class="btn btn-dark mb-3">
        <i class="bi bi-plus"></i>
        Add New Card
      </button>

      <div class="card-list">
        <div class="card-item">
          <div class="d-flex align-items-center">
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg"
              alt="MasterCard"
            />
            <div>
              <h6 class="fw-bold mb-1">Master Card</h6>
              <p class="mb-0">3456 XX78 9800 55X3</p>
            </div>
          </div>
          <button class="btn btn-delete">Delete</button>
        </div>

        <div class="card-item">
          <div class="d-flex align-items-center">
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/a/a4/Paypal_2014_logo.png"
              alt="Paypal"
            />
            <div>
              <h6 class="fw-bold mb-1">Paypal</h6>
              <p class="mb-0">5677 3490 XX90 XX23</p>
            </div>
          </div>
        </div>
      </div>

      <!-- PayPal Button -->

      <div class="dienthoai">
        <h1><img
            src="https://cdn.tgdd.vn/Products/Images/42/50920/dien-thoai-di-dong-apple-iphone-4S-dienmay.com-b.jpg"
          /></h1>
        <p>{{this.name}}</p>
        <h4>{{this.price}} USD</h4>
        <div class="button">
          <form action="/pay" method="post">
            <input type="hidden" name="productId" value="{{this.id}}" />
            <input type="submit" value="Buy" />
          </form>
        </div>
      </div>

    </div>

    <script>
      paypal.Buttons({ style: { layout: 'vertical', color: 'gold', shape:
      'rect', label: 'paypal' }, createOrder: function(data, actions) { return
      actions.order.create({ purchase_units: [{ amount: { value: '0.01' } }] });
      }, onApprove: function(data, actions) { return
      actions.order.capture().then(function(details) { alert("Giao dịch thành
      công, cảm ơn " + details.payer.name.given_name); }); }
      }).render('#paypal-button-container');
    </script>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>