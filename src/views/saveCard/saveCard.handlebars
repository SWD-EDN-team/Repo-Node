<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Cards</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .card-item { display: flex; align-items: center; justify-content:
      space-between; padding: 15px; border-bottom: 1px solid #eee; } .card-item
      img { width: 40px; height: auto; margin-right: 10px; } .btn-delete {
      background: #fdecec; color: #dc3545; border: none; }
    </style>
  </head>
  <body>
    <div class="container mt-4">
      <button class="btn btn-dark mb-3">
        <i class="bi bi-plus"></i>
        Add New Card
      </button>

      <div class="card-list">
        <div class="card-item">
          <div class="d-flex align-items-center">
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg"
              alt="MasterCard"
            />
            <div>
              <h6 class="fw-bold mb-1">Master Card</h6>
              <p class="mb-0">3456 XX78 9800 55X3</p>
            </div>
          </div>
          <button class="btn btn-delete">Delete</button>
        </div>

        <div class="card-item">
          <div class="d-flex align-items-center">
            <img
              src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRrE2IxmCPQdYE4ROGpWuS18CPByLCBRbKiTw&s"
              alt="Visa"
            />
            <div>
              <h6 class="fw-bold mb-1">Visa Card</h6>
              <p class="mb-0">5677 3490 XX90 XX23</p>
            </div>
          </div>
          <button class="btn btn-delete">Delete</button>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>