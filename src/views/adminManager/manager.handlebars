<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pending Sellers</title>
  <!-- Thêm CDN Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <div class="container mt-5">
    <h2>View List Sellers</h2>
    <div class="list-group">
      {{#each sellers}}
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <p class="mb-0">{{this.store_name}}</p>
        <div>
          <button class="btn btn-success btn-sm">Accept</button>
          <button class="btn btn-danger btn-sm">Remove</button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
     <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <!-- Thêm CDN Bootstrap JS (nếu cần dùng các tính năng như tooltip, modal, v.v.) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>
    async function HandleAccept(id) {
      try{
        const response = await axios.post(`http://localhost:8081/api/v1/seller/verify/${id}`,{ verify: true }, // Dữ liệu gửi đi (body)
          {
            headers: {
              "Content-Type": "application/json",
              "Authorization": `Bearer ${localStorage.getItem("token")}`
            }
          })
      }catch(error){
        console.error(error);
      }
    }
    async function HandleRemove(id) {
      try{
        const response = await axios.post(`http://localhost:8081/api/v1/seller/remove/${id}`,{ verify: true }, // Dữ liệu gửi đi (body)
          {
            headers: {
              "Content-Type": "application/json",
              "Authorization": `Bearer ${localStorage.getItem("token")}`
            }
          })
      }catch(error){
        console.error(error);
      }
    }
  </script>
</body>
</html>