<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Profile Form</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .profile-img { width: 80px; height: 80px; border-radius: 50%; object-fit:
      cover; } .edit-icon { position: absolute; bottom: 5px; right: 5px;
      background: white; border-radius: 50%; padding: 5px; }
    </style>
  </head>
  <body class="p-4">

    <div class="container">
      <!-- Profile Section -->
      <div class="d-flex align-items-center mb-4">
        <div class="position-relative">
          <img
            src="https://i.pravatar.cc/80"
            alt="Profile Picture"
            class="profile-img"
          />
          <button class="edit-icon border-0">
            <i class="bi bi-pencil-square"></i>
          </button>
        </div>
        <button class="btn btn-dark ms-auto">
          <i class="bi bi-pencil-square me-1"></i>
          Edit Profile
        </button>
      </div>

      <!-- Form Section -->
      <form>
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">First Name</label>
            <input type="text" class="form-control" value="Robert" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Last Name</label>
            <input type="text" class="form-control" value="Fox" />
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Phone Number</label>
            <input type="text" class="form-control" value="(252) 555-0126" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Email Address</label>
            <input
              type="email"
              class="form-control"
              value="robertfox@example.com"
            />
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Address</label>
          <input
            type="text"
            class="form-control"
            value="2464 Royal Ln. Mesa, New Jersey 45463"
          />
        </div>
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>