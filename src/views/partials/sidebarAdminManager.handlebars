    <!-- JavaScript x·ª≠ l√Ω s·ª± ki·ªán -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    console.log(">>>>", document.querySelectorAll(".menu-item"));

    // H√†m ƒë·∫∑t tr·∫°ng th√°i active cho menu item
    function setActive(element) {
      // X√≥a class 'active' kh·ªèi t·∫•t c·∫£ menu-item
      document.querySelectorAll(".menu-item").forEach((item) => {
        item.classList.remove("active");
      });

      // Th√™m class 'active' v√†o item ƒë∆∞·ª£c click
      element.classList.add("active");

      // L∆∞u tr·∫°ng th√°i active v√†o localStorage
      localStorage.setItem("activeMenu", element.getAttribute("href"));
    }

    // L·∫•y link active t·ª´ localStorage
    const activeLink = localStorage.getItem("activeMenu");

    // Ki·ªÉm tra v√† √°p d·ª•ng tr·∫°ng th√°i active khi t·∫£i trang
    if (activeLink) {
      document.querySelectorAll(".menu-item").forEach((item) => {
        if (item.getAttribute("href") === activeLink) {
          item.classList.add("active");
        }
      });
    }

    // G√°n s·ª± ki·ªán click cho t·∫•t c·∫£ menu-item
    document.querySelectorAll(".menu-item").forEach((item) => {
      item.addEventListener("click", function (event) {
        event.preventDefault(); // NgƒÉn trang t·∫£i l·∫°i
        setActive(this); // ƒê·∫∑t tr·∫°ng th√°i active
        window.location.href = this.getAttribute("href"); // Chuy·ªÉn h∆∞·ªõng th·ªß c√¥ng
      });
    });
  });
</script>

