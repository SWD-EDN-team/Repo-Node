<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
    <div class="card border-0 shadow-sm product-card d-flex flex-column h-100" data-id="{{_id}}">
        <div class="card-img-wrapper position-relative">
            <img src="{{image.[0]}}" class="card-img-top w-100 object-fit-cover" alt="{{product_name}}">
            <button class="btn btn-dark add-to-cart position-absolute bottom-0 w-100">Add to Cart</button>
        </div>
        <div class="card-body d-flex flex-column flex-grow-1">
            <h5 class="card-title">{{product_name}}</h5>
            <p class="text-muted flex-grow-1">{{description}}</p>
            <p class="fw-bold">{{price}}₫</p>
            <p class="stars">{{#times rate}}★{{/times}}</p>
        </div>
    </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".product-card").forEach((card) => {
      card.addEventListener("click", function () {
        const productId = this.getAttribute("data-id");
        window.location.href = `/view/detailProduct/${productId}`;
      });
    });
  });
</script>