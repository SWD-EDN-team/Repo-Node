{{!-- layout.hbs --}}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sidebar</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    {{!-- Top Navigation Bar --}}
    <nav class="navbar navbar-light bg-light px-3 py-3 d-flex justify-content-between">
      <a href="#" class="px-5">
        <img src="/assets/images/LogoWhite.png" alt="Logo" width="100" />
      </a>
      
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle mx-4" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="fa-solid fa-user"></i> Profile
        </button>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
          <li><a class="dropdown-item" href="/profile">View Profile</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
        </ul>
      </div>
    </nav>

    <div class="d-flex">
      <aside class="d-flex flex-column p-3 bg-light" style="width: 250px; height: 100vh;">
        <div class="text-center mb-4">
        </div>
          <ul class="nav nav-pills flex-column" id="sidebarMenu">
              <li class="nav-item py-2">
                <a href="" class="nav-link d-flex align-items-center gap-2 {{#if this.active}}active{{/if}}">
                  <i class="fa-solid fa-circle fs-5"></i>
                  <span class="flex-grow-1">Overview</span>
                </a>
              </li>
               <li class="nav-item py-2">
                <a href="" class="nav-link d-flex align-items-center gap-2 {{#if this.active}}active{{/if}}">
                  <i class="fa-solid fa-cart-shopping fs-5"></i>
                  <span class="flex-grow-1">eCommerce</span>
                </a>
              </li>
               <li class="nav-item py-2">
                <a href="" class="nav-link d-flex align-items-center gap-2 {{#if this.active}}active{{/if}}">
                  <i class="fa-solid fa-folder fs-5"></i>
                  <span class="flex-grow-1">Projects</span>
                </a>
              </li>
               <li class="nav-item py-2">
                <a href="" class="nav-link d-flex align-items-center gap-2 {{#if this.active}}active{{/if}}">
                  <i class="fa-solid fa-user fs-5"></i>
                  <span class="flex-grow-1">User Profile</span>
                </a>
              </li>
               <li class="nav-item py-2">
                <a href="" class="nav-link d-flex align-items-center gap-2 {{#if this.active}}active{{/if}}">
                  <i class="fa-solid fa-id-card fs-5"></i>
                  <span class="flex-grow-1">Account</span>
                </a>
              </li>
               <li class="nav-item py-2">
                <a href="" class="nav-link d-flex align-items-center gap-2 {{#if this.active}}active{{/if}}">
                  <i class="fa-solid fa-users fs-5"></i>
                  <span class="flex-grow-1">Corporate</span>
                </a>
              </li>
        </ul>
      </aside>
    </div>
  </body>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
  document.addEventListener("DOMContentLoaded", function () {
    const menuItems = document.querySelectorAll("#sidebarMenu .nav-link");

    // Lấy trạng thái active từ localStorage
    let activeIndex = localStorage.getItem("activeMenuIndex") || 0;

    function setActive(index) {
      menuItems.forEach(item => item.classList.remove("active"));
      menuItems[index].classList.add("active");
      localStorage.setItem("activeMenuIndex", index);
    }

    // Đặt trạng thái active khi load trang
    setActive(activeIndex);

    // Xử lý click event
    menuItems.forEach((item, index) => {
      item.addEventListener("click", function () {
        setActive(index);
      });
    });
  });
</script>