<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard UI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
  <style>
    /* Sidebar */
    .sidebar {
      width: 280px;
      height: 100vh;
      background: #f8f9fa;
      padding: 20px;
      position: fixed;
      top: 56px;
      left: 0;
      overflow-y: auto;
    }
    .sidebar a {
      color: #333;
      font-weight: 500;
      display: block;
      padding: 10px;
      text-decoration: none;
      border-radius: 5px;
      transition: 0.3s;
    }
    .sidebar a:hover, .sidebar .active {
      background: black;
      color: white !important;
    }
    .content {
      margin-left: 280px;
      min-height: 100vh;
      display: flex;
      align-items: center; /* Căn giữa theo chiều dọc */
      justify-content: center; /* Căn giữa theo chiều ngang */
    }
    #linkHome:hover{
      background-color: #fdfdfd !important;
    }
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Dashboard</a>
    <div class="ms-auto d-flex align-items-center">
      <span class="text-white me-3">Hello, Seller</span>
      <a href="/view/login" class="btn btn-outline-light btn-sm">Logout</a>
    </div>
  </div>
</nav>

<!-- Sidebar -->
<div class="sidebar">
  <div class="d-flex align-items-center gap-3 mb-4">
    <a id="linkHome" href="/view/home"><img src="/assets/images/Logowhite.png" width="100"></a>
  </div>
  <ul class="list-unstyled">
    <li><a href="/view/overView" class="menu-item"><i class="bi bi-person"></i> Personal Information</a></li>
    <li><a href="/view/addProduct" class="menu-item"><i class="bi bi-box"></i> Add Product</a></li>
    <li><a href="/view/manageProduct" class="menu-item"><i class="bi bi-heart"></i> Manage Product</a></li>
    <li><a href="/view/manageOrder" class="menu-item"><i class="bi bi-geo-alt"></i> Manage Order</a></li>
    <li><a href="/view/manageReview" class="menu-item"><i class="bi bi-credit-card"></i> Manage Review</a></li>
  </ul>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    function setActive(element) {
      document.querySelectorAll(".menu-item").forEach(item => item.classList.remove("active"));
      element.classList.add("active");
      localStorage.setItem("activeMenu", element.getAttribute("href"));
    }
    const activeLink = localStorage.getItem("activeMenu");
    if (activeLink) {
      document.querySelectorAll(".menu-item").forEach(item => {
        if (item.getAttribute("href") === activeLink) {
          item.classList.add("active");
        }
      });
    }
    document.querySelectorAll(".menu-item").forEach(item => {
      item.addEventListener("click", function (event) {
        event.preventDefault();
        setActive(this);
        window.location.href = this.getAttribute("href");
      });
    });
  });
</script>

</body>
</html>
