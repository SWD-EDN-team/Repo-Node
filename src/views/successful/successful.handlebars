<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Changed</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f9f9f9;
            position: relative;
        }

        /* Làm mờ nền */
        .blur-background {
            filter: blur(5px);
            opacity: 0.5;
            transition: all 0.3s ease-in-out;
        }

        .container {
            display: flex;
            width: 950px;
            height: 600px;
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.15);
            transition: all 0.3s;
            position: relative;
        }

        .image {
            width: 55%;
        }

        .image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .form-section {
            width: 45%;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
        }

        h2 {
            font-size: 28px;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
        }

        p {
            color: #555;
            font-size: 16px;
            margin-bottom: 15px;
        }

        .otp-input {
            display: flex;
            justify-content: center;
            gap: 12px;
            margin: 20px 0;
        }

        .otp-input input {
            width: 60px;
            height: 60px;
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            border: 2px solid #ccc;
            border-radius: 8px;
            background: #f9f9f9;
            transition: all 0.3s;
        }

        .otp-input input:focus {
            border-color: #111;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.3);
        }

        .verify-button {
            width: 100%;
            padding: 16px;
            background: black;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s;
            text-transform: uppercase;
        }

        .verify-button:hover {
            background: #222;
        }

        /* FORM THÔNG BÁO THÀNH CÔNG */
        .success-popup {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 350px;
            background: white;
            padding: 35px;
            border-radius: 12px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
            text-align: center;
            animation: fadeIn 0.5s ease-in-out;
            display: none;
            z-index: 10;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translate(-50%, -60%);
            }
            to {
                opacity: 1;
                transform: translate(-50%, -50%);
            }
        }

        .success-popup h2 {
            font-size: 18px;
            font-weight: 700;
            color: #222;
            margin-bottom: 20px;
        }

        .back-button {
            width: 100%;
            padding: 14px;
            background: black;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
        }

        .back-button:hover {
            background: #333;
            transform: scale(1.05);
        }
    </style>
</head>
<body>

    <!-- Form OTP -->
    <div class="container" id="otpContainer">
        <div class="image">
           <img src="/assets/images/login-image.jpg" alt="Signup Image">
        </div>
        <div class="form-section">
            <h2>Enter OTP</h2>
            <p>We have sent a code to your registered email</p>
            <p><strong>robertfox@example.com</strong></p>

            <div class="otp-input">
                <input type="text" maxlength="1">
                <input type="text" maxlength="1">
                <input type="text" maxlength="1">
                <input type="text" maxlength="1">
                <input type="text" maxlength="1">
            </div>

            <button class="verify-button" onclick="verifyOTP()">Verify</button>
        </div>
    </div>

    <!-- Form thông báo thành công -->
    <div class="success-popup" id="successPopup">
        <h2>Password Changed Successfully</h2>
        <button class="back-button" onclick="goBack()">Back to Login</button>
    </div>

    <script>
        function verifyOTP() {
            const otpInputs = document.querySelectorAll(".otp-input input");
            let otpCode = "";

            otpInputs.forEach(input => {
                otpCode += input.value.trim();
            });

            if (otpCode.length !== 5) {
                alert("Please enter a valid 5-digit OTP.");
                return;
            }

            document.getElementById("otpContainer").classList.add("blur-background"); // Làm mờ OTP
            document.getElementById("successPopup").style.display = "block"; // Hiện popup thành công
        }

        function goBack() {
            window.location.href = "/login"; // Chuyển hướng về trang login
        }
    </script>

</body>
</html>
