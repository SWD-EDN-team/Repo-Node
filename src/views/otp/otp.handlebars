<style>
  .sidebar {
    display: none !important;
  }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(to right, #f8f9fa, #e9ecef);
        }

        .container {
            display: flex;
            width: 900px;
            height: 550px;
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.2);
        }

        .image {
            width: 50%;
            background: #000;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .form-section {
            width: 50%;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
            background: white;
        }

        .form-section a {
            font-size: 14px;
            color: #555;
            text-decoration: none;
            margin-bottom: 15px;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            transition: color 0.3s;
        }

        .form-section a:hover {
            color: black;
        }

        h2 {
            font-size: 26px;
            font-weight: 700;
            margin-bottom: 12px;
            color: #333;
        }

        p {
            color: #666;
            font-size: 15px;
            margin-bottom: 15px;
        }

        .otp-input {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin: 20px 0;
        }

        .otp-input input {
            width: 55px;
            height: 55px;
            font-size: 22px;
            font-weight: bold;
            text-align: center;
            border: 2px solid #ccc;
            border-radius: 10px;
            outline: none;
            transition: all 0.3s;
            background: #f8f8f8;
        }

        .otp-input input:focus {
            border-color: #000;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }

        .verify-button {
            width: 100%;
            padding: 14px;
            background: black;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            text-transform: uppercase;
        }

        .verify-button:hover {
            background: #333;
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="image">
            <img src="/assets/images/login-image.jpg" alt="OTP Verification">
        </div>
        
        <div class="form-section">
           <a href="/login" class="back-link">← Back</a>
            <h2>Enter OTP</h2>
            <p>We have sent a code to your registered email</p>
            <p><strong id="email">{{email}}</strong></p>

            <div class="otp-input">
                <input type="text" id="otp1" >
                <input type="text" id="otp2" >
                <input type="text" id="otp3" >
                <input type="text" id="otp4" >
                <input type="text" id="otp5" >
           </div>

            <button onclick="verifyOTP()" class="verify-button">Verify</button>
        </div>
    </div>
     <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
        async function verifyOTP() {
            console.log("call verifyOTP"); // Sửa typo "verifile" thành "verifyOTP"
            
            const otp1 = document.getElementById("otp1").value;
            const otp2 = document.getElementById("otp2").value;
            const otp3 = document.getElementById("otp3").value;
            const otp4 = document.getElementById("otp4").value;
            const otp5 = document.getElementById("otp5").value;
            const email = document.getElementById("email").innerText;
            
            console.log("email:", email);
            
            const otp = otp1 + otp2 + otp3 + otp4 + otp5;
            if (otp.length !== 5) {
                alert("Please enter a valid 5-digit OTP.");
                return;
            }
            
            console.log("Entered OTP:", otp);

            try {
                const response = await axios.post(
                    "http://localhost:8081/api/v1/auth/verify_email",
                    { email, otp },
                    {
                        headers: {
                            "Content-Type": "application/json",
                            "Authorization": `Bearer ${localStorage.getItem("token")}`,
                        },
                    }
                );

                if (response.status === 200) {
                    alert("OTP verified successfully!");
                    window.location.href = "/dashboard"; // Sửa đường dẫn nếu cần
                }
            } catch (error) {
                console.error("Error:", error.response ? error.response.data : error);
                alert("Invalid OTP. Please try again.");
            }
        }
    </script>

</body>
</html>
