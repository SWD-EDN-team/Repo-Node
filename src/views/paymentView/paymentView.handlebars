<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thanh Toán</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .checkout-container {
        max-width: 900px;
        margin: auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
      }
      .cart-items {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
      }
      .cart-item {
        background: #1e2952;
        color: white;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        width: 180px;
      }
      .cart-item img {
        width: 100%;
        height: 120px;
        border-radius: 8px;
        object-fit: cover;
      }
      .cart-item button {
        width: 100%;
        margin-top: 10px;
        background: white;
        color: #1e2952;
        border: none;
        padding: 5px;
        border-radius: 5px;
        font-weight: bold;
      }
      .divider {
        width: 100%;
        border-top: 2px solid #ddd;
        margin: 20px 0;
      }
      .qr-container {
        width:  450px;
        text-align: center;
      }
      .qr-container img {
         width: 500px;
  height: 250px;
  max-width: 100%;
  max-height: 100%;
      }
      .payment-info {
        margin-top: 10px;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5 checkout-container">
      <h2>Thanh Toán</h2>
      <div class="cart-items">
        {{#each cart}}
          <div class="cart-item">
            <img src="{{this.image}}" alt="{{this.name}}" />
            <p class="fw-bold">{{this.name}}</p>
            <p>{{this.total}} VND</p>
            <button>Mua</button>
          </div>
        {{/each}}
      </div>
      <div class="divider"></div>
      <div class="qr-container">
        <img
          class="product_qr_img"
          src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=https://example.com"
          alt="QR Code"
        />
        <div class="payment-info">
          <p>Nội dung chuyển khoản: <span id="paid_content">NDCK</span></p>
          <p>Số tiền: <span id="paid_price">{{total}}</span></p>
        </div>
      </div>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript để tạo QR Code -->
   <script>
document.addEventListener("DOMContentLoaded", function () {
  let MY_BANK = {
    BANK_ID: "VCB",
    ACCOUNT_NO: "9704368623100024010",
  };

  let totalElement = document.getElementById("paid_price");
  let total = totalElement ? totalElement.textContent.trim().replace(/\./g, "").replace(/đ/g, "") : "0";

  total = parseInt(total, 10); 

  if (isNaN(total)) total = 0;

  let QR = `https://img.vietqr.io/image/${MY_BANK.BANK_ID}-${MY_BANK.ACCOUNT_NO}-compact2.png?amount=${total}&addInfo=ThanhToan`;

  let product_qr_img = document.querySelector(".product_qr_img");
  if (product_qr_img) {
    product_qr_img.src = QR;
  }
});

</script>

  </body>
</html>
