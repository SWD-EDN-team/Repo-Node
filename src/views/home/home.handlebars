<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <style>
    .sidebar {
        display: none !important;
    }
    .hero-section {
        background: url("https://plus.unsplash.com/premium_photo-1682096556408-c7ee01d2ac81?q=80&w=1967&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D") no-repeat center center;
        background-size: cover;
        height: 25%; 
        display: flex;
        align-items: center;
        color: white; 
        position: relative;
        padding-left: 5%;
    }

    .hero-section .container {
        position: relative; 
        z-index: 1;
    }
    .categories-wrapper {
        position: relative;
        overflow: hidden;
        max-width: 100%;
    }

    .categories {
        display: flex;
        gap: 20px;
        transition: transform 0.3s ease-in-out;
        white-space: nowrap;
        padding: 0 10px;
        box-sizing: border-box;
    }

    .categories-header {
    display: flex;
    align-items: center;
    justify-content: space-between; /* Giãn cách hợp lý */
    margin-bottom: 20px; /* Khoảng cách dưới */
    }

    .category-card {
        flex: 1 1 25%;
        text-align: center;
        min-width: 22%; 
    }

    .category-card img {
        width: 100%;
        max-width: 250px;
        height: 320px;
        border-radius: 8px;
        object-fit: cover;
    }

    .slider-btn.left {
        left: 0;
    }

    .slider-btn.right {
        right: 0;
    }

    .slider-btn:hover {
        background-color: rgba(0, 0, 0, 0.8);
    }

    .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000; 
    }
    body {
    padding-top: 70px; 
    align-items: center;
    }
    .card {
        position: relative;
        overflow: hidden;
    }

    .card-img-wrapper {
    position: relative;
    overflow: hidden;
    max-width: 100%;
    }

    .card-img-top {
        width: 100%;
        transition: transform 0.3s ease-in-out;
    }

    .card-body {
        position: relative;
        z-index: 2;
    }

    .card .btn {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        border: none;
        padding: 10px 15px;
        opacity: 0;
        transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

    .card:hover .btn {
        opacity: 1;
        transform: translateX(-50%) translateY(-5px);
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    .old-price {
        color: rgba(122, 122, 122, 0.5); 
        font-size: 0.9em; 
    }

    .rating-section {
        margin-top: 50px; 
        position: relative; 
    }

    .rating-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .rating-container {
        display: flex;
        gap: 20px;
        overflow: hidden;
        max-width: 800px;
        scroll-behavior: smooth;
    }

    .rating-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 0 20px;
    position: relative;
    }

    .slider-controls {
        display: flex !important;
        gap: 5px ;
    }

    .slider-btn {
    background-color: #f5f5f5;
    color: #333;
    border: none;
    padding: 12px 15px;
    cursor: pointer;
    font-size: 16px;
    border-radius: 12px;
    transition: background 0.3s, transform 0.2s;
    }

    .slider-btn.right {
        background-color: #111;
        color: white;
    }

    .rating {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        min-width: 250px;
        transition: transform 0.3s;
    }

    .stars {
        color: #FFA500;
        font-size: 20px;
    }

    .customer-info {
        display: flex;
        align-items: center;
        margin-top: 10px;
    }

    .customer-info img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 10px;
    }
    </style>
</head>
<body>

    {{!-- Header --}}
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">Krist</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Shop</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Our Story</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Blog</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact Us</a></li>
                </ul>
                <a href="#" class="btn btn-dark ms-3">Login</a>
            </div>
        </div>
    </nav>

    {{!-- Banner--}}
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-start text-white">
                    <h2 class="fw-bold">Classic Exclusive</h2>
                    <h1 class="fw-bold">Women's Collection</h1>
                    <p>UP TO 40% OFF</p>
                    <a href="/shop" class="btn btn-light">Shop Now →</a>
                </div>
            </div>
        </div>
    </section>

    {{!-- Categories Section --}}
    <section class="container my-5">
        <div class="categories-header">
            <h3>Shop by Categories</h3>
            <div class="slider-controls">
                <button class="slider-btn left" onclick="moveSlide(-1)">&#8592;</button>
                <button class="slider-btn right" onclick="moveSlide(1)">&#8594;</button>
            </div>
        </div>
        <div class="categories-wrapper">
            <div class="categories">
                {{#each categories}}
                <div class="category-card">
                    <img src="{{this.image}}" alt="{{this.name}}">
                    <h5>{{this.name}}</h5>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

        <!-- Our Bestseller Section -->
        <section class="container my-5">
            <h2 class="text-center fw-bold mb-4">Our Bestseller</h2>
            <div class="row">
                {{#each products}}
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-img-wrapper">
                            <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                            <button class="btn btn-dark add-to-cart">Add to Cart</button>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="text-muted">{{this.description}}</p>
                            <p class="fw-bold">${{this.price}} 
                            <del class="old-price">${{this.oldPrice}}</del></p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>

    

    <!-- Deals of the Month Section -->
    <section class="container my-5 d-flex align-items-center justify-content-between">
        <div class="deal-text w-50">
            <h2 class="fw-bold">Deals of the Month</h2>
            <p class="text-muted">It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.</p>
            <div class="d-flex gap-3">
                <div class="text-center">
                    <h4 class="fw-bold">120</h4>
                    <p class="text-muted">Days</p>
                </div>
                <div class="text-center">
                    <h4 class="fw-bold">18</h4>
                    <p class="text-muted">Hours</p>
                </div>
                <div class="text-center">
                    <h4 class="fw-bold">15</h4>
                    <p class="text-muted">Mins</p>
                </div>
                <div class="text-center">
                    <h4 class="fw-bold">10</h4>
                    <p class="text-muted">Secs</p>
                </div>
            </div>
            <a href="/shop" class="btn btn-dark mt-3">View All Products →</a>
        </div>
        <div class="deal-image w-50">
            <img src="https://luvinus.com/wp-content/uploads/2022/05/fashionista-la-gi-1.jpg" class="img-fluid rounded" alt="Deal Image">
        </div>
    </section>

    {{!-- Rating & comment --}}
    <section class="rating-section">
        <div class="rating-header">
            <h2>What our Customers say</h2>
            <div class="slider-controls">
                <button class="slider-btn left" onclick="slideLeft()">&#8592;</button>
                <button class="slider-btn right" onclick="slideRight()">&#8594;</button>
            </div>
        </div>

        <div class="rating-wrapper">       
            <div class="rating-container">
                {{#each ratings}}
                <div class="rating">
                    <div class="stars">
                        {{#times this.rating}}★{{/times}}
                    </div>
                    <p>{{this.review}}</p>
                    <div class="customer-info">
                        <img src="{{this.image}}" alt="{{this.name}}">
                        <div>
                            <strong>{{this.name}}</strong>
                            <p>{{this.role}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>


    {{!-- Bootstrap Script --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
<script>
    let scrollAmount = 0;
    const container = document.querySelector(".categories");
    const cardWidth = document.querySelector(".category-card").offsetWidth + 20; // Độ rộng của 1 category-card + khoảng cách

    function moveSlide(direction) {
        const maxScroll = container.scrollWidth - container.clientWidth;
        
        // Di chuyển theo hướng (1: phải, -1: trái)
        scrollAmount += direction * cardWidth * 2; // Cuộn 2 item mỗi lần
        if (scrollAmount < 0) scrollAmount = 0;
        if (scrollAmount > maxScroll) scrollAmount = maxScroll;
        
        container.style.transform = `translateX(-${scrollAmount}px)`;
    }
</script>