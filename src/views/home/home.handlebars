
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    
    <!-- Bootstrap CSS -->
    {{!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> --}}

     <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/home.css">
</head>
<style>
            .hero-section {
            position: relative;
            width: 100%;
        }

        .carousel-item img {
            width: 100%;
            height: 500px;
            object-fit: cover;
        }

        .text-overlay {
            position: absolute;
            top: 50%;
            left: 10%;
            transform: translateY(-50%);
            z-index: 10;
            color: white;
        }
</style>
<body>
    <!-- Banner -->
    <section class="hero-section">
        <div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="2"></button>
            </div>

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/upload/banner1.webp" class="d-block w-100" alt="Slide 1">
                </div>
                <div class="carousel-item">
                    <img src="/images/upload/banner2.jpg" class="d-block w-100" alt="Slide 2">
                </div>
                <div class="carousel-item">
                    <img src="/images/upload/banner5.jpg" class="d-block w-100" alt="Slide 3">
                </div>
            </div>

            <!-- Nút điều hướng -->
            <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

        <!-- Nội dung trên banner -->
        <div class="container text-overlay">
            <div class="row align-items-center">
                <div class="col-md-6 text-start">
                    <h2 class="fw-bold">Classic Exclusive</h2>
                    <h1 class="fw-bold">Women's Collection</h1>
                    <p class="fs-4">UP TO 40% OFF</p>
                    <a href="/view/products/page/1" class="btn btn-light btn-lg">Shop Now →</a>
                </div>
            </div>
        </div>
    </section>

    {{!-- Categories Section --}}
    <section class="containercate my-5">
        <div class="categories-header">
            <h3>Shop by Categories</h3>
            <div class="slider-controls">
                <button class="slider-btn left" onclick="moveSlide(-1)">&#8592;</button>
                <button class="slider-btn right" onclick="moveSlide(1)">&#8594;</button>
            </div>
        </div>
        <div class="categories-wrapper">
            <div class="categories">
                {{#each categories}}
                <div class="category-card">
                    <img src="{{this.image}}" alt="{{this.category_name}}">
                    <h5>{{this.category_name}}</h5>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

        <!-- Our Bestseller Section -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold mb-0">Our Bestseller</h2>
            <a href="/view/products/page/1" class="btn btn-primary ms-5">View All Products</a>
        </div>
        <section class="container my-5">
            <div class="row">
                {{#each products}}
                    {{> productCard}}
                {{/each}}
            </div>
        </section>

    

    <!-- Deals of the Month Section -->
    <section class="container my-5 d-flex align-items-center justify-content-between">
        <div class="deal-text w-50">
            <h2 class="fw-bold">Deals of the Month</h2>
            <p class="text-muted">It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.</p>
            <div class="d-flex gap-3">
                <div class="text-center">
                    <h4 class="fw-bold">120</h4>
                    <p class="text-muted">Days</p>
                </div>
                <div class="text-center">
                    <h4 class="fw-bold">18</h4>
                    <p class="text-muted">Hours</p>
                </div>
                <div class="text-center">
                    <h4 class="fw-bold">15</h4>
                    <p class="text-muted">Mins</p>
                </div>
                <div class="text-center">
                    <h4 class="fw-bold">10</h4>
                    <p class="text-muted">Secs</p>
                </div>
            </div>
            <a href="#" class="btn btn-dark mt-3">View All Products →</a>
        </div>
        <div class="deal-image w-50">
            <img src="https://luvinus.com/wp-content/uploads/2022/05/fashionista-la-gi-1.jpg" class="img-fluid rounded" alt="Deal Image">
        </div>
    </section>

    {{!-- Rating & comment --}}
    <div class="container">
    <section class="rating-section ">
        <div class="rating-header">
            <h2>What our Customers say</h2>
            <div class="slider-controls">
                <button class="slider-btn left" onclick="slideLeft()">&#8592;</button>
                <button class="slider-btn right" onclick="slideRight()">&#8594;</button>
            </div>
        </div>

        <div class="rating-wrapper">       
            <div class="rating-container">
                {{#each ratings}}
                <div class="rating">
                    <div class="stars">
                        {{#times this.rate}}★{{/times}}
                    </div>
                    <p>{{this.comment}}</p>
                    <div class="customer-info">
                        <img src="{{this.user_id.avatar}}">
                        <div>
                            <strong>{{this.user_id.name}}</strong>
                            <p>{{this.user_id.role}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    </div>
</body>
</html>
<!-- Bootstrap 5 -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // ---------- CATEGORIES SLIDER ----------
    let scrollAmount = 0;
    const container = document.querySelector(".categories");
    const cardWidth = document.querySelector(".category-card").offsetWidth + 20; // Độ rộng của 1 category-card + khoảng cách

    function moveSlide(direction) {
        const maxScroll = container.scrollWidth - container.clientWidth;
        
        // Di chuyển theo hướng (1: phải, -1: trái)
        scrollAmount += direction * cardWidth * 2; // Cuộn 2 item mỗi lần
        if (scrollAmount < 0) scrollAmount = 0;
        if (scrollAmount > maxScroll) scrollAmount = maxScroll;
        
        container.style.transform = `translateX(-${scrollAmount}px)`;
    }
    // ---------- RATING SLIDER ----------
    let currentIndex = 0;
    const ratingContainer = document.querySelector(".rating-container");
    const ratingCards = document.querySelectorAll(".rating");

    function updateSlider() {
        if (ratingCards.length === 0) return; // Kiểm tra nếu không có phần tử nào

        const cardWidth = ratingCards[0].offsetWidth + 20; // Lấy lại giá trị mỗi lần cập nhật
        const visibleCards = Math.floor(document.querySelector(".rating-wrapper").offsetWidth / cardWidth); // Số lượng card hiển thị
        let maxIndex = ratingCards.length - visibleCards; // Tính lại giới hạn chỉ số

        if (currentIndex > maxIndex) currentIndex = maxIndex; // Điều chỉnh nếu vượt quá giới hạn
        if (currentIndex < 0) currentIndex = 0; // Đảm bảo không cuộn quá bên trái

        ratingContainer.style.transform = `translateX(${-currentIndex * cardWidth}px)`;
    }

    function slideRight() {
        currentIndex++;
        updateSlider();
    }

    function slideLeft() {
        currentIndex--;
        updateSlider();
    }
    window.addEventListener("resize", updateSlider);
    window.addEventListener("load", updateSlider);

</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var swiper = new Swiper(".mySwiper", {
            loop: true,
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
        });
    });
</script>


