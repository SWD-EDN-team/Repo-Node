<script>
    // ---------- CATEGORIES SLIDER ----------
    let scrollAmount = 0;
    const container = document.querySelector(".categories");
    const cardWidth = document.querySelector(".category-card").offsetWidth + 20; // Độ rộng của 1 category-card + khoảng cách

    function moveSlide(direction) {
        const maxScroll = container.scrollWidth - container.clientWidth;
        
        // Di chuyển theo hướng (1: phải, -1: trái)
        scrollAmount += direction * cardWidth * 2; // Cuộn 2 item mỗi lần
        if (scrollAmount < 0) scrollAmount = 0;
        if (scrollAmount > maxScroll) scrollAmount = maxScroll;
        
        container.style.transform = `translateX(-${scrollAmount}px)`;
    }
    // ---------- RATING SLIDER ----------
    let currentIndex = 0;
    const ratingContainer = document.querySelector(".rating-container");
    const ratingCards = document.querySelectorAll(".rating");

    function updateSlider() {
        if (ratingCards.length === 0) return; // Kiểm tra nếu không có phần tử nào

        const cardWidth = ratingCards[0].offsetWidth + 20; // Lấy lại giá trị mỗi lần cập nhật
        const visibleCards = Math.floor(document.querySelector(".rating-wrapper").offsetWidth / cardWidth); // Số lượng card hiển thị
        let maxIndex = ratingCards.length - visibleCards; // Tính lại giới hạn chỉ số

        if (currentIndex > maxIndex) currentIndex = maxIndex; // Điều chỉnh nếu vượt quá giới hạn
        if (currentIndex < 0) currentIndex = 0; // Đảm bảo không cuộn quá bên trái

        ratingContainer.style.transform = `translateX(${-currentIndex * cardWidth}px)`;
    }

    function slideRight() {
        currentIndex++;
        updateSlider();
    }

    function slideLeft() {
        currentIndex--;
        updateSlider();
    }
    window.addEventListener("resize", updateSlider);
    window.addEventListener("load", updateSlider);


</script>


